<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.camhelp.activity.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/imgBtn_search_return"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_returnblack"
            android:background="@drawable/ll_item_selector"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/et_search_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:hint="搜索全部"
                android:background="@null"
                android:maxLength="18"
                android:maxLines="1"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/iv_clear"
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_clearblack"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/imgBtn_search"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_searchblack"
            android:background="@drawable/ll_item_selector"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCE1E1E1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="18dp"
            android:text="历史搜索"/>

        <LinearLayout
            android:id="@+id/ll_delete_searchHistory"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/ll_item_selector">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_deleteblack"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空历史记录"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_searchHistory_nodata"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="还没有搜索历史"/>
        </LinearLayout>

        <!--显示列表-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_searchHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
