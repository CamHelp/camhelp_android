<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepblack"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/top_return"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_return"
            android:background="@drawable/ll_item_selector"/>

        <TextView
            android:id="@+id/tv_image_count"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/1"
            android:textSize="18dp"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
        <TextView
            android:id="@+id/tv_save_image_photo"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ll_item_selector"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.camhelp.myview.LookLargePicViewPager
            android:id="@+id/LookLargePicViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.bm.library.PhotoView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.camhelp.myview.LookLargePicViewPager>
    </FrameLayout>
</LinearLayout>